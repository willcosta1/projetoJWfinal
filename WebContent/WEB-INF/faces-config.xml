<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
	version="2.1">
	<managed-bean>
		<managed-bean-name>adocaoController</managed-bean-name>
		<managed-bean-class>br.edu.ctup.controller.AdocaoController</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>animalController</managed-bean-name>
		<managed-bean-class>br.edu.ctup.controller.AnimalController</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>chamadoController</managed-bean-name>
		<managed-bean-class>br.edu.ctup.controller.ChamadoController</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>funcionarioController</managed-bean-name>
		<managed-bean-class>br.edu.ctup.controller.FuncionarioController</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>noticiaController</managed-bean-name>
		<managed-bean-class>br.edu.ctup.controller.NoticiaController</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>usuarioController</managed-bean-name>
		<managed-bean-class>br.edu.ctup.controller.UsuarioController</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<navigation-rule>
		<from-view-id>/CadastrarAnimal.jsp</from-view-id>
		<navigation-case>
			<from-action>#{animalController.salvar}</from-action>
			<from-outcome>sucesso</from-outcome>
			<to-view-id>/ListarAnimaisFuncionario.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/CadNoticia.jsp</from-view-id>
		<navigation-case>
			<from-action>#{noticiaController.salvar}</from-action>
			<from-outcome>sucesso</from-outcome>
			<to-view-id>/GerenciarNoticias.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/GerenciarNoticias.jsp</from-view-id>
		<navigation-case>
			<from-action>#{noticiaController.alterar}</from-action>
			<from-outcome>sucesso</from-outcome>
			<to-view-id>/AlterarNoticia.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/AlterarNoticia.jsp</from-view-id>
		<navigation-case>
			<from-action>#{noticiaController.salvar}</from-action>
			<from-outcome>sucesso</from-outcome>
			<to-view-id>/GerenciarNoticias.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/ListarAnimaisFuncionario.jsp</from-view-id>
		<navigation-case>
			<from-action>#{animalController.alterar}</from-action>
			<from-outcome>sucesso</from-outcome>
			<to-view-id>/AlterarAnimal.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/AlterarAnimal.jsp</from-view-id>
		<navigation-case>
			<from-action>#{animalController.salvar}</from-action>
			<from-outcome>sucesso</from-outcome>
			<to-view-id>/ListarAnimaisFuncionario.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/cadastroUsuario.jsp</from-view-id>
		<navigation-case>
			<from-action>#{usuarioController.salvar}</from-action>
			<from-outcome>sucesso</from-outcome>
			<to-view-id>/listarUsuarios.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/listarUsuarios.jsp</from-view-id>
		<navigation-case>
			<from-action>#{usuarioController.alterar}</from-action>
			<from-outcome>sucesso</from-outcome>
			<to-view-id>/AlterarUsuario.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/AlterarUsuario.jsp</from-view-id>
		<navigation-case>
			<from-action>#{usuarioController.salvar}</from-action>
			<from-outcome>sucesso</from-outcome>
			<to-view-id>/listarUsuarios.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/CadastroFuncionario.jsp</from-view-id>
		<navigation-case>
			<from-action>#{funcionarioController.salvar}</from-action>
			<from-outcome>sucesso</from-outcome>
			<to-view-id>/ListarFuncionarios.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/ListarFuncionarios.jsp</from-view-id>
		<navigation-case>
			<from-action>#{funcionarioController.alterar}</from-action>
			<from-outcome>sucesso</from-outcome>
			<to-view-id>/AlterarFuncionario.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/AlterarFuncionario.jsp</from-view-id>
		<navigation-case>
			<from-action>#{funcionarioController.salvar}</from-action>
			<from-outcome>sucesso</from-outcome>
			<to-view-id>/ListarFuncionarios.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/AbrirChamado.jsp</from-view-id>
		<navigation-case>
			<from-action>#{chamadoController.salvar}</from-action>
			<from-outcome>sucesso</from-outcome>
			<to-view-id>/ChamadoSucesso.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/AbrirChamado.jsp</from-view-id>
		<navigation-case>
			<from-action>#{chamadoController.salvar}</from-action>
			<from-outcome>erro</from-outcome>
			<to-view-id>/ChamadoErro.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
</faces-config>
